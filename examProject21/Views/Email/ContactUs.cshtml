@model SendMailDto
@{
    ViewData["Title"] = "ContactUs";
}


<h1>Book en tid med en raadgiver</h1>
<hr/>
<br/>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Navn">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Subject"></label>
        <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Emne">
        <span class="text-danger" asp-validation-for="@Model.Subject"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <textarea class="form-control" asp-for="@Model.Message" placeholder="Din besked"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Message"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send Mail</button>
    <h1>@ViewBag.Message</h1>
</form>



