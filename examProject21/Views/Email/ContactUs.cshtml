@model SendMailDto
@{
    ViewData["Title"] = "ContactUs";
}


<h1>Book en tid med en raadgiver</h1>
<hr/>
<br/>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Fulde navn">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Din mail">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address"></label>
        <input type="text" asp-for="@Model.Address" class="form-control" placeholder="Din adresse">
        <span class="text-danger" asp-validation-for="@Model.Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <textarea class="form-control" asp-for="@Model.Message" placeholder="Din besked"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Message"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Send mail</button>
    </div>
    
    <style>@ViewBag.HideForm</style>
    <h1>@ViewBag.SuccessfullySent</h1>
    <h3>@ViewBag.Message</h3>
</form>



